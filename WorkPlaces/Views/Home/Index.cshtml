@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
@model string
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
</head>
<body>
    <div style="background-color: #121f3c; background: rgb(0 0 0 / 40%); height: 100%; display: block; ">
        <header>
            <div align="left">
                <img src="~/css/logo.png" width="200" />
            </div>
        </header>
        <div style="background-color: #000000; background: rgb(0 0 0);">
            <p align="center">Authorization</p>
        </div>
        <br /><br /><br /><br /><br /><br />
        <div style="display:flex;justify-content:center; align-items:center;">
            <form class="form" method="post" asp-action="Login">
                <h1 class="form_title">Entry</h1>
                <div class="form_group">
                    <input class="form_input" placeholder="Login" name="login" />
                </div>
                <div class="form_group">
                    <input class="form_input" type="password" placeholder="Password" name="password" />
                </div>
                <p style="font-size:16px;color:red;">@Model</p><br />
                <table>
                    <tr>
                        <td><button class="form_button" type="submit">Sign in</button></td>
                        <td><button style="margin-left: 92px;" class="form_button" name="register" value="reg">Sign up</button></td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</body>
</html>
